<h2 class="tc merryweather lh-copy">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <fieldset class="ba b--transparent ph0 mh0">
    <div class="field mt3">
      <%= f.label :email, class: 'db fw6 lh-copy f6 mb2 ttu tracked' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'pa2 input-reset ba bg-transparent w-100 b--moon-gray br2' %>
    </div>

    <div class="field mt3">
      <%= f.label :password, class: 'db fw6 lh-copy f6 mb2 ttu tracked' %>
      <%= f.password_field :password, autocomplete: "off", class: 'pa2 input-reset ba bg-transparent w-100 b--moon-gray br2' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field mt3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'pa0 ma0 lh-copy f6 pointer' %>
      </div>
    <% end -%>
  </fieldset>

  <div class="actions mt3">
    <%= f.submit "Log in", class: 'dn', id: 'form-submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= render 'shared/submit_form', locals: {text: 'Sign in'} %>
