<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <fieldset class="ba b--transparent ph0 mh0">
    <div class="flex ttu">
      <input type="radio" name="user-type" class="dn user-type-switch" id="user-type-hero">
      <label for="user-type-hero" class="outline w-50 pv4 mr3 tc flex justify-center items-center pointer">
        I'm a hero
      </label>

      <input type="radio" name="user-type" class="dn user-type-switch" id="user-type-civilian">
      <label for="user-type-civilian" class="outline w-50 pv4 tc pointer">
        I want to meet a hero
      </label>
    </div>

    <div class="field mt3">
      <%= f.label :email, class: 'db fw6 lh-copy f6' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'pa2 input-reset ba bg-transparent w-100' %>
    </div>

    <div class="field mt3">
      <%= f.label :password, class: 'db fw6 lh-copy f6' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'pa2 input-reset ba bg-transparent w-100' %>
    </div>

    <div class="field mt3">
      <%= f.label :password_confirmation, class: 'db fw6 lh-copy f6' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'pa2 input-reset ba bg-transparent w-100' %>
    </div>

    <div class="mt3">
      <label class="db fw4 lh-copy f6" for="name">Location</label>
      <input class="pa2 input-reset ba bg-transparent w-100 measure" type="text" name="location" id="location">
    </div>

    <input type="hidden" type="text" name="lat" id="lat">
    <input type="hidden" type="text" name="lng" id="lng">
  </fieldset>

  <div class="actions mt3">
    <%= f.submit "Sign up", class: 'b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6 dib' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
