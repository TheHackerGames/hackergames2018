%header.tc.h3.shadow-2.ttu.mb4.flex.items-center.justify-center
  .mw6.ph3.ph5-ns.w-100.relative.flex.items-center.justify-center
    - if controller.controller_name == 'sign_up' || controller.controller_name == 'users'
      %a.absolute.left-1.ml5-ns{href: 'javascript:;', onclick: "window.history.go(-1); return false;"}
        = render 'shared/icons/caret'
    - else
      - if user_signed_in?
        .absolute.left-1.ml5-ns.flex.items-center
          = link_to profile_path do
            = image_tag avatar(current_user.avatar_url), width: 40, height: 40, class: 'br-100'

    = link_to (user_signed_in? ? profile_path : root_path), class: 'f5 measure-wide black no-underline fw6 tracked flex header' do
      - if current_page?(root_path)
        Local hero
      - else
        = render 'shared/icons/logo'
